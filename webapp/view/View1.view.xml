<mvc:View
    controllerName="picklistmanagement.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <subHeader>
            <OverflowToolbar>
                <SearchField
                    liveChange=".onSearch"
                    width="100%"
                />
            </OverflowToolbar>
        </subHeader>
        <content>
            <Table
                id="idPicklistTable"
                inset="false"
                items="{
						path: '/PickListV2',
						filters: [{path: 'status', operator: 'EQ', value1: 'A'}]
					}"
                growing="true"
                growingScrollToLoad="true"
            >
                <columns>
                    <Column width="12em">
                        <Text text="Picklist ID" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        type="Navigation"
                        press="handleItemPress"
                    >
                        <cells>
                            <ObjectIdentifier
                                title="{id}"
                                text="{ProductId}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
